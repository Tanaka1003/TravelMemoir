<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= search_form_for @q, url: url do |f| %>
        <div class="input-group mb-2">
          <%= f.search_field :body_or_destination_cont, class: 'form-control', placeholder: '検索ワード' %>
          <div class="input-group-append">
            <%= f.submit '検索', class: 'btn btn-info' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>