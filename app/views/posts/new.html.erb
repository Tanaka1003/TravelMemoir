<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="my-2">新規投稿</h2>
      <%= form_with model: @post, local:true do |f| %>
        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.attachment_field :image, class: "form-control-file image" %>
        </div>
        <div class="form-group">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: "form-control title" %>
        </div>
        <div class="form-group">
          <%= f.label :旅行先 %>
          <%= f.text_field :destination, class: "form-control destination" %>
        </div>
        <div class="form-group">
          <%= f.label :思い出 %>
          <%= f.text_area :body, class: "form-control body" %>
        </div>
        <div class="my-4">
          <%= f.submit "投稿", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>