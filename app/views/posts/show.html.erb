<div class="container">
  <div class="row">
    <div class="mt-2">
      <h2>投稿詳細</h2>
    </div>
  </div>
  <div class="d-flex mx-auto">
    <div class="row">
      <div class="text-center">
        <div class="post-detail-left" style="width: 700px">
          <p><%= attachment_image_tag @post, :image, width: '70%', height: '70%' %></p>
          <p>ユーザー名: <%= @post.user.name %></p>
        </div>
      </div>
    </div>
    <div class-"row">
      <div class="text-left" style="width: 350px">
        <div class="my-5">
          <p class="mt-4">タイトル: <%= @post.title %></p>
          <p class="mt-4">旅行先: <%= @post.destination %></p>
          <p class="mt-4">思い出: <%= @post.body %></p>
          <% if current_user.already_liked?(@post) %>
            <p><%= link_to "いいねしない", post_like_path(@post), method: :delete %></p>
          <% else %>
            <p><%= link_to "いいね", post_likes_path(@post), method: :post %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <% if @post.user == current_user %>
        <p>
          <%= link_to '編集', edit_post_path(@post), class: "btn btn-sm btn-success" %>
          <%= link_to '削除', post_path(@post), method: :delete, class: "btn btn-sm btn-danger" %>
        </p>
      <% end %>
    </div>
  </div>
</div>